# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# Stream Chat API (get from https://getstream.io)
STREAM_API_KEY=your-stream-api-key
STREAM_API_SECRET=your-stream-api-secret

# Twilio (for video calling - get from https://www.twilio.com)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Supabase (optional - for additional features)
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Client URL (for CORS in production)
CLIENT_URL=http://localhost:5173
